# ===========================================
# N8N DEPLOYMENT - ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env and fill in the values

# ===========================================
# N8N Configuration
# ===========================================
N8N_HOST=n8n.yourdomain.com
N8N_PORT=5678
N8N_PROTOCOL=https
WEBHOOK_URL=https://n8n.yourdomain.com/

# Timezone (https://en.wikipedia.org/wiki/List_of_tz_database_time_zones)
GENERIC_TIMEZONE=America/Sao_Paulo

# Encryption key (generate with: openssl rand -hex 32)
N8N_ENCRYPTION_KEY=your-encryption-key-here

# ===========================================
# Authentication
# ===========================================
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your-secure-password-here

# ===========================================
# PostgreSQL Database
# ===========================================
POSTGRES_DB=n8n
POSTGRES_USER=n8n
POSTGRES_PASSWORD=your-postgres-password-here

# ===========================================
# Redis
# ===========================================
REDIS_PASSWORD=your-redis-password-here

# ===========================================
# Execution Settings
# ===========================================
# Queue mode for better performance (queue or regular)
EXECUTIONS_MODE=queue

# Prune old executions
EXECUTIONS_DATA_PRUNE=true
EXECUTIONS_DATA_MAX_AGE=168

# Save execution data
EXECUTIONS_DATA_SAVE_ON_ERROR=all
EXECUTIONS_DATA_SAVE_ON_SUCCESS=all
EXECUTIONS_DATA_SAVE_ON_PROGRESS=false
EXECUTIONS_DATA_SAVE_MANUAL_EXECUTIONS=true

# ===========================================
# Performance
# ===========================================
# Max concurrent executions for main instance
N8N_CONCURRENCY=10

# Max concurrent executions per worker
N8N_WORKER_CONCURRENCY=5
